generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prediction {
  id             String   @id @default(cuid())
  url            String   @unique
  subject        String
  name           String?
  candidateId    String?
  totalScore     Float
  attempted      Int
  correct        Int
  incorrect      Int
  positiveMarks  Float
  negativeMarks  Float
  createdAt      DateTime @default(now())
}
